<table class="comment-table">
	<% @book.comments.each do |comment| %>
				<tr>
					<td><%=link_to user_path(comment.user.id) do %>
					  	  <%=attachment_image_tag comment.user, :profile_image, size: "40x40", format: 'jpeg', class: "img-circle", fallback: "no_image.jpg" %><br>
					  	  <%=comment.user.name %>
					  	 <% end %>
					</td>
					<td>
						<%= comment.comment %>
					</td>
					<% if comment.user == current_user %>
					<td>
					<span class="def"><%=link_to "Destroy" , book_comment_path(comment.book, comment), method: :delete, class:"btn btn-danger btn-sm" %></span>
					</td>
				</tr>
				<% end %>
	<% end %>
</table>