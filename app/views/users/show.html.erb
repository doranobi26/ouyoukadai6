<div class="container10">
	<div class="space">
	<p class="notice"><%= notice %></p>
	<div class="row">
		<div class="col-xs-3">



			<h3 class="info">User info</h3>
			<!-- プロフィール写真の処理を行う-->
			

			<%= attachment_image_tag @user, :profile_image, size: "100x100", format: 'jpeg', class: "img-circle",    fallback: "no_image.jpg" %>
  　　　　　　<%# if @user.id == current_user.id %>
   　　　　　 <%#= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %>
 　　　　　　 <%# end %>
			<%#= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-rounded", fallback: "no_image.jpg"%><!--profile-thumb-->


			<table class="table">
				<tbody>
					<tr>
						<th>name</th>
						<th><%=@user.name %></th>
					</tr>

					<tr>
						<th>introduction</th>
						<th><%=@user.introduction %></th>
					</tr>

				</tbody>
			</table>

					<%# if @user.id==current_user.id %>
					<%=link_to edit_user_path(@user.id),class:"btn btn-default  btn-block" do %>
					<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
					<%# end %>
					<% end %>

			<h3 class="new_book">New book</h3>
			<%=form_with model:@book do |f| %>

			<h4>Title</h4>
			<%=f.text_field :title,class:"btn-block" %>

			<h4>Opinion</h4>
			<%=f.text_area :body,class:"btn-block" %>

			<%=f.submit "Create Book",class: "btn btn-primary btn-block" %>
			<% end %>
		</div>

		<div class="col-xs-9">

			<h3 class="books100">Books</h3>
			<table class="table table-hover table-invrese">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>

				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td><%=link_to user_path(@user.id) do %>
							<%=attachment_image_tag book.user, :profile_image, size: "40x40", format: 'jpeg', class: "img-circle", fallback: "no_image.jpg" %>
							<% end %>
						</td>
						<td>
							<%=link_to book.title, book_path(book.id) %>
						</td>
						<td>
							<%=book.body %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>




		</div>
	</div>
</div>
</div>

